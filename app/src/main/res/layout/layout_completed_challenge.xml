<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.text.TextUtils"/>
        <variable
            name="challenge"
            type="com.aleks.aleksiev.codewars.presentation.challenges.model.ChallengeModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/completedChallengeTextView"
            style="@style/textViewStyleAutoSizeMedium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:text="@{TextUtils.isEmpty(challenge.challengeName) ? String.format(@string/completed_challenge, @string/unknown) : String.format(@string/completed_challenge, challenge.challengeName)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="H,1:0.1"
            tools:text="@tools:sample/full_names"/>

    </android.support.constraint.ConstraintLayout>
</layout>