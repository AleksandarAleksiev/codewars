<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextViewStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="DetailsTextViewStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/details_text_size</item>
    </style>

    <style name="DetailsTextViewStyleAutoSize" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeMaxTextSize">@dimen/details_text_size</item>
    </style>

    <style name="LabelTextViewStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/strong_grey</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

</resources>
